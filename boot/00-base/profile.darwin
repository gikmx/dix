#! /usr/bin/env bash
! $DOTFILES && >&2 echo "DOTFILES404" && exit 1
! sys.is_darwin && sys.error "406" && exit 1
! sys.has_brew && return 0

prefix=$(brew --prefix)


export PATH=$prefix/bin:$prefix/sbin:$PATH

# Enable bash completion
sys.has_brew 'bash-completion' source $prefix/etc/bash_completion


if sys.has_brew 'coreutils'; then
	prefix=$(brew --prefix coreutils)
	export PATH=$prefix/libexec/gnubin:$PATH
	export MANPATH=$prefix/libexec/gnuman:$MANPATH
fi

unset prefix