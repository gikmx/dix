#! /usr/bin/env bash
! $DOTFILES && >&2 echo "DOTFILES404" && exit 1

DOTFILES_ON_AFTER(){

	# Set the author email
	if [ ! -f $DOTFILES_PATH_SRV/GIT_AUTHOR_EMAIL ]; then
	    log.info "Configuring GIT Author Email ..."
	    tmp="$(whoami)@$(hostname)"
	    read -p "Your email address? ["$tmp"]" input
	    [ -z "$input" ] && name=$tmp
	    echo "$input" > $DOTFILES_PATH_SRV/GIT_AUTHOR_EMAIL
	fi

	boot.pkg_enable $DOTFILES_PKG
}

boot.head "Installing Base"